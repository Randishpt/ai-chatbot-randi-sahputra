<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI Assistant Pro</title>
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;500;600&family=Inter:wght@400;500;600&family=Fira+Code&display=swap"
        rel="stylesheet">
    <!-- Highlight.js Theme -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/styles/github-dark.min.css">
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet">
</head>

<body>

    <main>
        <header>
            <div class="bot-profile-pic">ü§ñ</div>
            <div class="header-info">
                <h3>AI Assistant</h3>
                <p>Online ‚Ä¢ Friendly Mode</p>
            </div>
        </header>

        <div id="chat-box">
            <div class="message-container bot">
                <div class="message-content">
                    Halo! Saya asisten AI Anda. Ada yang bisa saya bantu hari ini? üòä
                </div>
            </div>
        </div>

        <!-- Typing Indicator -->
        <div class="typing-container" id="typing-indicator">
            <div class="typing-bubble">
                <div class="dot"></div>
                <div class="dot"></div>
                <div class="dot"></div>
            </div>
        </div>

        <div class="input-area">
            <div class="input-wrapper">
                <input type="text" id="user-input" placeholder="Ketik pesan..." autocomplete="off"
                    onkeypress="handleEnter(event)">
            </div>
            <button onclick="sendMessage()" aria-label="Kirim">
                <svg viewBox="0 0 24 24">
                    <path d="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z"></path>
                </svg>
            </button>
        </div>
    </main>

    <!-- Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/highlight.min.js"></script>

    <script>
        // Configure Marked
        marked.setOptions({
            highlight: function (code, lang) {
                const language = highlight.getLanguage(lang) ? lang : 'plaintext';
                return highlight.highlight(code, { language }).value;
            },
            langPrefix: 'hljs language-'
        });

        const chatBox = document.getElementById('chat-box');
        const userInput = document.getElementById('user-input');
        const typingIndicator = document.getElementById('typing-indicator');

        // Auto-focus input
        userInput.focus();

        function scrollToBottom() {
            chatBox.scrollTop = chatBox.scrollHeight;
        }

        async function sendMessage() {
            const message = userInput.value.trim();
            if (!message) return;

            // Add User Message
            appendMessage(message, 'user');
            userInput.value = '';

            // Show Typing
            showTyping(true);

            try {
                const response = await fetch('/chat', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ message })
                });
                const data = await response.json();

                // Hide Typing & Add Bot Response
                showTyping(false);
                appendMessage(data.reply, 'bot', true);
            } catch (error) {
                showTyping(false);
                appendMessage("‚ö†Ô∏è Maaf, terjadi kesalahan koneksi.", 'bot');
            }
        }

        function appendMessage(text, type, isMarkdown = false) {
            const container = document.createElement('div');
            container.className = `message-container ${type}`;

            const content = document.createElement('div');
            content.className = 'message-content';

            if (isMarkdown && type === 'bot') {
                content.innerHTML = marked.parse(text);
            } else {
                content.textContent = text;
            }

            container.appendChild(content);
            chatBox.appendChild(container); // Append to chatBox, not typingIndicator
            scrollToBottom();
        }

        function showTyping(show) {
            if (show) {
                chatBox.appendChild(typingIndicator); // Move to bottom
                typingIndicator.style.display = 'block';
            } else {
                typingIndicator.style.display = 'none';
            }
            scrollToBottom();
        }

        function handleEnter(event) {
            if (event.key === 'Enter') {
                sendMessage();
            }
        }
    </script>

</body>

</html>